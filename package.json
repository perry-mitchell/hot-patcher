{
  "name": "hot-patcher",
  "version": "1.0.0",
  "description": "Hot method patching framework for handling environmental method differences",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "format": "prettier --write '{source,test}/**/*.js'",
    "prepublishOnly": "npm run build",
    "test": "run-s test:specs test:coverage test:format",
    "test:coverage": "nyc check-coverage --statements 94 --lines 97 --functions 100 --branches 87",
    "test:format": "prettier --check '{source,test}/**/*.js'",
    "test:specs": "npm run build && nyc mocha -r test/index.js 'test/**/*.spec.js'"
  },
  "files": [
    "dist/*"
  ],
  "lint-staged": {
    "{source,test}/**/*.js": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perry-mitchell/hot-patcher.git"
  },
  "keywords": [
    "patch",
    "override",
    "hot",
    "patch"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perry-mitchell/hot-patcher/issues"
  },
  "homepage": "https://github.com/perry-mitchell/hot-patcher#readme",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "chai": "^4.3.6",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "typescript": "^4.8.2"
  }
}
